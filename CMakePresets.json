{
  "version": 6,
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_MAKE_PROGRAM": "/opt/homebrew/bin/ninja"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "inherits": "default",
      "binaryDir": "${sourceDir}/cmake-build-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "asan",
      "displayName": "Debug with AddressSanitizer",
      "inherits": "default",
      "binaryDir": "${sourceDir}/cmake-build-asan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fsanitize=address -fno-omit-frame-pointer",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address"
      }
    },
    {
      "name": "tsan",
      "displayName": "Debug with ThreadSanitizer",
      "inherits": "default",
      "binaryDir": "${sourceDir}/cmake-build-tsan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fsanitize=thread -fno-omit-frame-pointer",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=thread"
      }
    },
    {
      "name": "ubsan",
      "displayName": "Debug with UndefinedBehaviorSanitizer",
      "inherits": "default",
      "binaryDir": "${sourceDir}/cmake-build-ubsan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fsanitize=undefined -fno-omit-frame-pointer -fno-sanitize-recover=all",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=undefined"
      }
    },
    {
      "name": "msvc-asan",
      "displayName": "Debug with AddressSanitizer (MSVC)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-msvc-asan",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_C_FLAGS": "/fsanitize=address",
        "CMAKE_CXX_FLAGS": "/EHsc /fsanitize=address"
      }
    },
    {
      "name": "shared",
      "displayName": "Shared Library (Release)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-shared",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VIO_BUILD_SHARED": "ON"
      }
    },
    {
      "name": "shared-debug",
      "displayName": "Shared Library (Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-shared-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VIO_BUILD_SHARED": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "asan",
      "configurePreset": "asan"
    },
    {
      "name": "tsan",
      "configurePreset": "tsan"
    },
    {
      "name": "ubsan",
      "configurePreset": "ubsan"
    },
    {
      "name": "msvc-asan",
      "configurePreset": "msvc-asan"
    },
    {
      "name": "shared",
      "configurePreset": "shared"
    },
    {
      "name": "shared-debug",
      "configurePreset": "shared-debug"
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "asan",
      "configurePreset": "asan"
    },
    {
      "name": "tsan",
      "configurePreset": "tsan"
    },
    {
      "name": "ubsan",
      "configurePreset": "ubsan"
    },
    {
      "name": "msvc-asan",
      "configurePreset": "msvc-asan"
    },
    {
      "name": "shared",
      "configurePreset": "shared"
    },
    {
      "name": "shared-debug",
      "configurePreset": "shared-debug"
    }
  ]
}
